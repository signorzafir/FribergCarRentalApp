@{
}
<h>Create Booking</h>

<form asp-action="CreateBooking" method="post">
    <div class="mb-3">
        <label asp-for="CarId" class="form-label">Select Car</label>
        <select asp-for="CarId" class="form-control">
            <option value="">-- Select a Car --</option>
            @foreach (var car in ViewBag.Cars)
            {
                <option value="@car.Id">@car.FullName - @car.PricePerDay SEK per day</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label">Start Date</label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>

    <div class="mb-3">
        <label asp-for="EndDate" class="form-label">End Date</label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">Book</button>
</form>