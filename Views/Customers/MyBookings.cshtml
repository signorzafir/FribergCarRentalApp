@model IEnumerable<FribergCarRentalApp.Models.Booking>

@{
    ViewData["Title"] = "MyBookings";
}

<h1>MyBookings</h1>

<p>Logged in as @ViewBag.LoggedInCustomer</p>

<p><a asp-action="UserHome">Go to HomePage</a></p>

<p><a asp-action="Logout">Logout</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Car.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.Email)
                </td>
            <td>
                    <a asp-controller="Bookings" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Bookings" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Customers" asp-action="CancelBooking" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
            

}
    </tbody>
</table>
